    "jest": "^29.7.0",
    "jest-cucumber": "^4.4.0",
    "lint-staged": "^15.1.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.4",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": [
      ".*\\.steps\\.ts$"
